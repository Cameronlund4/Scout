<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="info.cameronlund.scout.EventViewActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="2016 VEX Worlds - VEX Robotics Competition Middle School Division"
            android:textSize="22sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/eventViewTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="RE-VRC-14-9975"
            android:textSize="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/eventViewTitle"
            android:id="@+id/eventViewSku"/>
</RelativeLayout>